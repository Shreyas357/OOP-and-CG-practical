
import java.util.Scanner;

public class HotelBookingSystem {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Assume the hotel has 3 floors and 5 rooms per floor
        boolean[][] rooms = new boolean[3][5]; // false = available, true = booked
        boolean running = true;

        System.out.println("=== Welcome to the Hotel Room Booking System ===");

        while (running) {
            System.out.println("\n--- MENU ---");
            System.out.println("1. View Rooms");
            System.out.println("2. Book a Room");
            System.out.println("3. Exit");
            System.out.print("Enter your choice: ");
            int choice = sc.nextInt();

            switch (choice) {
                case 1:
                    // View Rooms
                    System.out.println("\nRoom Status (A = Available, B = Booked):");
                    for (int i = 0; i < rooms.length; i++) {
                        System.out.print("Floor " + (i + 1) + ": ");
                        for (int j = 0; j < rooms[i].length; j++) {
                            System.out.print(rooms[i][j] ? "[B] " : "[A] ");
                        }
                        System.out.println();
                    }
                    break;

                case 2:
                    // Book a Room
                    System.out.print("\nEnter floor number (1 - " + rooms.length + "): ");
                    int floor = sc.nextInt();
                    System.out.print("Enter room number (1 - " + rooms[0].length + "): ");
                    int room = sc.nextInt();

                    // Validate input
                    if (floor < 1 || floor > rooms.length || room < 1 || room > rooms[0].length) {
                        System.out.println("Invalid floor or room number!");
                    } else if (rooms[floor - 1][room - 1]) {
                        System.out.println("Sorry, this room is already booked!");
                    } else {
                        rooms[floor - 1][room - 1] = true;
                        System.out.println("Room " + room + " on Floor " + floor + " has been successfully booked!");
                    }
                    break;

                case 3:
                    // Exit system
                    running = false;
                    System.out.println("\nThank you for using the Hotel Booking System!");
                    break;

                default:
                    System.out.println("Invalid choice! Please try again.");
            }
        }

        sc.close();
    }
}
